-->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ForbiddenSQL">

	
	<resultMap id="forbiddenList" type="com.esoom.cmstest.board.service.ForbiddenVO">
		<result property="fbdNo" column="FBD_NO"/>
		<result property="fbdNm" column="FBD_NM"/>
		<result property="fbdId" column="FBD_ID"/>
		<result property="registPnttm" column="REGIST_PNTTM"/>
	</resultMap>
	
	<select id="selectForbiddenList" parameterType="com.esoom.cmstest.board.service.ForbiddenVO" resultMap="forbiddenList">
		
			SELECT
				*
			FROM
				CMSBBSFORBIDDEN 
			WHERE
			1=1
			<if test="@egovframework.com.cmm.util.EgovMybaitsUtil@isNotEmpty(searchKeyword)">
				AND FBD_NM LIKE CONCAT ('%', #{searchKeyword},'%')
			</if>
			ORDER BY FBD_NO DESC
			LIMIT #{recordCountPerPage} OFFSET #{firstIndex}
						
	</select>	
	
	<select id="forbiddenListCnt" parameterType="com.esoom.cmstest.board.service.ForbiddenVO" resultType="java.lang.Integer">
			SELECT
				COUNT(FBD_NM)
			FROM
				CMSBBSFORBIDDEN
			WHERE
				1=1
			<if test="@egovframework.com.cmm.util.EgovMybaitsUtil@isNotEmpty(searchKeyword)">
				AND FBD_NM LIKE CONCAT ('%', #{searchKeyword},'%')
			</if>
	</select>	
	
	<insert id="insertForbidden" parameterType="com.esoom.cmstest.board.service.ForbiddenVO">
			
			INSERT INTO CMSBBSFORBIDDEN
			(
				FBD_NM , FBD_ID, REGIST_PNTTM
			 )
			VALUES
			(  
			  	#{fbdNm}, #{fbdId} , SYSDATE()
			 )			
		
	</insert>
	<delete id="deleteForbidden" parameterType="com.esoom.cmstest.board.service.ForbiddenVO">
			
			DELETE FROM CMSBBSFORBIDDEN
 			WHERE
 			FBD_NO = #{fbdNo}	
		
	</delete>

 	
	
</mapper>